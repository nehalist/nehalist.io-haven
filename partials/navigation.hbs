<nav class="navigation navbar navbar-expand-lg navbar-dark fixed-top {{^is "home"}}no-transparency{{/is}}">
    <div class="container">
        <a class="navbar-brand d-block d-xs-none navigation__logo-container d-none d-sm-block d-lg-none text-left {{#unless
            @site.logo}}navigation__logo-container--with-line-height{{/unless}}" href="{{@site.url}}">
            {{#if @blog.logo}}
                <img class="navigation__logo" src="{{@site.logo}}" alt="{{@site.title}}" height="30"/>
            {{else}}
                {{@site.title}}
            {{/if}}
        </a>
        <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#mainNavigation"
                aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNavigation">
            <ul class="nav navbar-nav flex-fill w-100 flex-nowrap">
                {{#foreach navigation}}
                    <li class="nav-item {{#if current}}active{{/if}}">
                        <a class="nav-link nav-{{slug}}" href="{{url absolute="true"}}">
                            {{label}}
                        </a>
                    </li>
                {{/foreach}}
            </ul>
            <ul class="nav navbar-nav flex-fill justify-content-center d-none d-lg-block d-xl-block">
                <li class="nav-item {{#if @site.logo}}d-flex{{/if}}">
                    <a class="navbar-brand" href="{{@site.url}}">
                        {{#if @site.logo}}
                            <div class="navigation__logo-container {{^is "home"}}navigation--show-logo{{/is}}">
                                <img class="navigation__logo" src="{{@site.logo}}" alt="{{@site.title}}" height="30"/>
                            </div>
                        {{else}}
                            <div class="navigation__logo-container {{^is "home"}}navigation--show-logo{{/is}}">
                                <span class="navigation__logo navigation__logo-text navbar-text">{{@site.title}}</span>
                            </div>
                        {{/if}}
                    </a>
                </li>
            </ul>
            <ul class="nav navbar-nav flex-fill w-100 justify-content-lg-end navbar-icons">
                <li class="nav-item"><a class="nav-link navigation__toggle-search-button" data-toggle="modal"
                                        data-target="#searchModal"><i class="fa fa-search fa-lg"></i></a></li>
                {{#if @site.facebook}}
                    <li class="nav-item"><a href="{{facebook_url @site.facebook}}" class="nav-link" target="_blank"><i
                        class="fa fa-facebook fa-lg"></i></a></li>
                {{/if}}
                {{#if @site.twitter}}
                    <li class="nav-item"><a href="{{twitter_url @site.twitter}}" class="nav-link" target="_blank"><i
                        class="fa fa-twitter fa-lg"></i></a></li>
                {{/if}}
                <li class="nav-item"><a href="//github.com/nehalist" class="nav-link" target="_blank"><i
                    class="fa fa-github fa-lg"></i></a></li>
            </ul>
        </div>
    </div>
</nav>
